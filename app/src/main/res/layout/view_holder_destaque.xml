<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_border_edittext">


    <TextView
        android:id="@+id/nomeFantasia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Posto"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />


    <TextView
        android:id="@+id/preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 0.000"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/logradouro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logradouro"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/bairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bairro"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizado: "
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/atualizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data - hora"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>




</LinearLayout>